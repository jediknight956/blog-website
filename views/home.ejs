<%- include("partials/header") %> 
<h1>Home</h1>
<p><%= content %> </p>
<% posts.forEach(post => { %>
    
    <h1> <%= post.title %> </h1>
    <% if(post.content.length > 100){ %>
        <p> <%= post.content.substring(0, 100) %> ... 
        <a href=<%= post.link %>>Read More</a>
        </p>
    <% } else { %>
        <p> <%= post.content %>  </p>
    <% } %> 
<% }); %> 
<%- include("partials/footer") %> 